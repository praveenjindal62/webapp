{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "essential": true,
            "image": "mongo",
            "name": "dbapp",
            "hostname": "dbapp",
            "memory": 128,
            "Volumes": [
                {
                  "HostDirectory": "/data/dbapp/db",
                  "ContainerDirectory": "/data/db"
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "MONGOURL",
                    "value": "dbapp:27017"
                },
                {
                    "name": "FLASK_PORT",
                    "value": "5004"
                }
            ],
            "essential": true,
            "image": "praveenjindal62/pyapp:1.1",
            "name": "pyapp",
            "hostname": "pyapp",
            "memory": 128,
            "links": [
                "dbapp"
              ]
        },
        {
            "image": "praveenjindal62/nginx:1.0",
            "name": "nginx_app",
            "memory": 128,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "environment": [
                {
                    "name": "APPURL",
                    "value": "pyapp"
                },
                {
                    "name": "APPPORT",
                    "value": "5004"
                }
            ],
            "links": [
                "pyapp"
              ]
        }
    ]
}

